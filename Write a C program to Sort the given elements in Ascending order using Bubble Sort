#include<stdio.h>
void bubblesort (int a[],int n)

int i,j,temp;
for(i=0;i<n-1; i++)

for(j=0; j<n-1-i; j++){
if(a[j]>a[j+1]){
temp = a[j];
a[j]=a[j+1];
a[j+1]=temp;

}

}

void printarray(int a[],int n){
int i;
for(int i=0;i<n;i++){
printf("a[%d] = %d\n",i,a[i]);

int main(){
int n, i;
printf("n :");
scanf("%d",&n);
int a[n];
for(i=0;i<n;i++){
printf("a[%d]=",i);
scanf("%d",&a[i]);

printf("Before sorting : \n");
printarray(a, n);
bubblesort(a, n);
printf("After sorting : \n");
printarray(a, n);
return 0;

}
